/// <summary>
/// محاسبه آمار کامل JSON
/// </summary>
private JsonStats CalculateStatistics()
{
    if (jsonToken == null)
        return new JsonStats();

    var stats = new JsonStats();
    var rawJson = JsonData ?? string.Empty;
    var formattedJson = jsonToken.ToString(Newtonsoft.Json.Formatting.Indented);

    stats.RawSize = Encoding.UTF8.GetByteCount(rawJson);
    stats.FormattedSize = Encoding.UTF8.GetByteCount(formattedJson);
    stats.MaxDepth = CalculateMaxDepth(jsonToken);

    // شمارش انواع داده‌ها
    CountTokenTypes(jsonToken, stats, 0);

    // محاسبه میانگین‌ها
    if (stats.ObjectCount > 0)
    {
        stats.AvgPropertiesPerObject = (double)stats.TotalProperties / stats.ObjectCount;
    }

    if (stats.ArrayCount > 0)
    {
        stats.AvgArrayLength = CalculateAverageArrayLength(jsonToken);
    }

    return stats;
}

/// <summary>
/// شمارش انواع Token‌ها به صورت بازگشتی
/// </summary>
private void CountTokenTypes(JToken token, JsonStats stats, int depth)
{
    switch (token.Type)
    {
        case JTokenType.Object:
            stats.ObjectCount++;
            var obj = (JObject)token;
            stats.TotalProperties += obj.Properties().Count();
            foreach (var prop in obj.Properties())
            {
                CountTokenTypes(prop.Value, stats, depth + 1);
            }
            break;

        case JTokenType.Array:
            stats.ArrayCount++;
            foreach (var item in (JArray)token)
            {
                CountTokenTypes(item, stats, depth + 1);
            }
            break;

        case JTokenType.String:
            stats.StringCount++;
            break;

        case JTokenType.Integer:
        case JTokenType.Float:
            stats.NumberCount++;
            break;

        case JTokenType.Boolean:
            stats.BooleanCount++;
            break;

        case JTokenType.Null:
            stats.NullCount++;
            break;
    }
}

/// <summary>
/// محاسبه حداکثر عمق JSON
/// </summary>
private int CalculateMaxDepth(JToken token, int currentDepth = 0)
{
    int maxDepth = currentDepth;

    if (token.Type == JTokenType.Object)
    {
        foreach (var prop in ((JObject)token).Properties())
        {
            int childDepth = CalculateMaxDepth(prop.Value, currentDepth + 1);
            maxDepth = Math.Max(maxDepth, childDepth);
        }
    }
    else if (token.Type == JTokenType.Array)
    {
        foreach (var item in (JArray)token)
        {
            int childDepth = CalculateMaxDepth(item, currentDepth + 1);
            maxDepth = Math.Max(maxDepth, childDepth);
        }
    }

    return maxDepth;
}

/// <summary>
/// محاسبه میانگین طول آرایه‌ها
/// </summary>
private double CalculateAverageArrayLength(JToken token)
{
    var arrays = new List<int>();
    CollectArrayLengths(token, arrays);
    return arrays.Any() ? arrays.Average() : 0;
}

/// <summary>
/// جمع‌آوری طول همه آرایه‌ها
/// </summary>
private void CollectArrayLengths(JToken token, List<int> lengths)
{
    if (token.Type == JTokenType.Array)
    {
        lengths.Add(((JArray)token).Count);
        foreach (var item in (JArray)token)
        {
            CollectArrayLengths(item, lengths);
        }
    }
    else if (token.Type == JTokenType.Object)
    {
        foreach (var prop in ((JObject)token).Properties())
        {
            CollectArrayLengths(prop.Value, lengths);
        }
    }
}

