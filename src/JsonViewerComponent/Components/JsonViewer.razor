private JsonStats CalculateStatistics(JToken token)
{
    var stats = new JsonStats();
    
    void Traverse(JToken current, int depth = 0)
    {
        stats.MaxDepth = Math.Max(stats.MaxDepth, depth);
        
        switch (current.Type)
        {
            case JTokenType.Object:
                stats.ObjectCount++;
                var obj = (JObject)current;
                stats.TotalProperties += obj.Count;
                
                int propCount = 0;
                foreach (var prop in obj.Properties())
                {
                    propCount++;
                    Traverse(prop.Value, depth + 1);
                }
                
                if (stats.ObjectCount > 0)
                {
                    stats.AvgPropertiesPerObject = (double)stats.TotalProperties / stats.ObjectCount;
                }
                break;
                
            case JTokenType.Array:
                stats.ArrayCount++;
                var arr = (JArray)current;
                stats.TotalArrayElements += arr.Count;
                
                if (stats.ArrayCount > 0)
                {
                    stats.AvgArrayLength = (double)stats.TotalArrayElements / stats.ArrayCount;
                }
                
                foreach (var item in arr)
                {
                    Traverse(item, depth + 1);
                }
                break;
                
            case JTokenType.String:
                stats.StringCount++;
                break;
                
            case JTokenType.Integer:
            case JTokenType.Float:
                stats.NumberCount++;
                break;
                
            case JTokenType.Boolean:
                stats.BooleanCount++;
                break;
                
            case JTokenType.Null:
                stats.NullCount++;
                break;
        }
    }
    
    Traverse(token);
    
    // محاسبه سایز
    stats.RawSize = Encoding.UTF8.GetByteCount(JsonData ?? string.Empty);
    stats.FormattedSize = Encoding.UTF8.GetByteCount(jsonToken?.ToString(Formatting.Indented) ?? string.Empty);
    
    return stats;
}
