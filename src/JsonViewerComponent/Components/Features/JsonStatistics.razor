@using Microsoft.JSInterop
@using Newtonsoft.Json
@inject IJSRuntime JSRuntime
@implements IDisposable

@* Statistics Modal Component *@

@if (IsVisible && Statistics != null)
{
    <div class="stats-modal-overlay" @onclick="HandleOverlayClick">
        <div class="stats-modal-container @(IsDarkTheme ? "dark-theme" : "")" @onclick:stopPropagation="true">

            @* Header *@
            <div class="stats-modal-header">
                <div class="stats-modal-title">
                    <Icon Name="bar-chart" Size="20" />
                    <span>JSON Statistics</span>
                </div>
                <button class="stats-modal-close" @onclick="HandleClose" title="Close (ESC)">
                    <Icon Name="x-lg" Size="20" />
                </button>
            </div>

            @* Chart Section *@
            <div class="stats-chart-section">
                <h6 class="chart-title">Data Type Distribution</h6>
                <div class="stats-pie-chart">
                    @{
                        var total = Statistics.StringCount + Statistics.NumberCount +
                        Statistics.BooleanCount + Statistics.NullCount;
                        var stringPercent = total > 0 ? (Statistics.StringCount * 100.0 / total) : 0;
                        var numberPercent = total > 0 ? (Statistics.NumberCount * 100.0 / total) : 0;
                        var booleanPercent = total > 0 ? (Statistics.BooleanCount * 100.0 / total) : 0;
                        var nullPercent = total > 0 ? (Statistics.NullCount * 100.0 / total) : 0;
                    }

                    <div class="pie-chart" style="background: conic-gradient(
                            from 0deg,
                            #ce9178 0% @(stringPercent)%,
                            #b5cea8 @(stringPercent)% @(stringPercent + numberPercent)%,
                            #569cd6 @(stringPercent + numberPercent)% @(stringPercent + numberPercent + booleanPercent)%,
                            #808080 @(stringPercent + numberPercent + booleanPercent)% 100%
                        );">
                    </div>

                    <div class="chart-legend">
                        <div class="legend-item">
                            <span class="legend-color" style="background: #ce9178;"></span>
                            <span class="legend-label">Strings (@Math.Round(stringPercent, 1)%)</span>
                        </div>
                        <div class="legend-item">
                            <span class="legend-color" style="background: #b5cea8;"></span>
                            <span class="legend-label">Numbers (@Math.Round(numberPercent, 1)%)</span>
                        </div>
                        <div class="legend-item">
                            <span class="legend-color" style="background: #569cd6;"></span>
                            <span class="legend-label">Booleans (@Math.Round(booleanPercent, 1)%)</span>
                        </div>
                        <div class="legend-item">
                            <span class="legend-color" style="background: #808080;"></span>
                            <span class="legend-label">Nulls (@Math.Round(nullPercent, 1)%)</span>
                        </div>
                    </div>
                </div>
            </div>

            @* Content *@
            <div class="stats-modal-content">
                <div class="stats-grid">
                    @* Total Properties *@
                    <div class="stat-card">
                        <div class="stat-icon icon-properties">
                            <Icon Name="list-ul" Size="24" />
                        </div>
                        <div class="stat-info">
                            <div class="stat-label">Total Properties</div>
                            <div class="stat-value">@Statistics.TotalProperties</div>
                        </div>
                    </div>

                    @* Objects *@
                    <div class="stat-card">
                        <div class="stat-icon icon-objects">
                            <Icon Name="braces" Size="24" />
                        </div>
                        <div class="stat-info">
                            <div class="stat-label">Objects</div>
                            <div class="stat-value">@Statistics.ObjectCount</div>
                        </div>
                    </div>

                    @* Arrays *@
                    <div class="stat-card">
                        <div class="stat-icon icon-arrays">
                            <Icon Name="collection" Size="24" />
                        </div>
                        <div class="stat-info">
                            <div class="stat-label">Arrays</div>
                            <div class="stat-value">@Statistics.ArrayCount</div>
                        </div>
                    </div>

                    @* Strings *@
                    <div class="stat-card">
                        <div class="stat-icon icon-strings">
                            <Icon Name="quote" Size="24" />
                        </div>
                        <div class="stat-info">
                            <div class="stat-label">Strings</div>
                            <div class="stat-value">@Statistics.StringCount</div>
                        </div>
                    </div>

                    @* Numbers *@
                    <div class="stat-card">
                        <div class="stat-icon icon-numbers">
                            <Icon Name="123" Size="24" />
                        </div>
                        <div class="stat-info">
                            <div class="stat-label">Numbers</div>
                            <div class="stat-value">@Statistics.NumberCount</div>
                        </div>
                    </div>

                    @* Booleans *@
                    <div class="stat-card">
                        <div class="stat-icon icon-booleans">
                            <Icon Name="toggle-on" Size="24" />
                        </div>
                        <div class="stat-info">
                            <div class="stat-label">Booleans</div>
                            <div class="stat-value">@Statistics.BooleanCount</div>
                        </div>
                    </div>

                    @* Nulls *@
                    <div class="stat-card">
                        <div class="stat-icon icon-nulls">
                            <Icon Name="slash-circle" Size="24" />
                        </div>
                        <div class="stat-info">
                            <div class="stat-label">Nulls</div>
                            <div class="stat-value">@Statistics.NullCount</div>
                        </div>
                    </div>

                    @* Max Depth *@
                    <div class="stat-card">
                        <div class="stat-icon icon-depth">
                            <Icon Name="layers" Size="24" />
                        </div>
                        <div class="stat-info">
                            <div class="stat-label">Max Depth</div>
                            <div class="stat-value">@Statistics.MaxDepth</div>
                        </div>
                    </div>

                    @* Raw Size *@
                    <div class="stat-card">
                        <div class="stat-icon icon-size">
                            <Icon Name="file-earmark-zip" Size="24" />
                        </div>
                        <div class="stat-info">
                            <div class="stat-label">Raw Size</div>
                            <div class="stat-value">@FormatBytes(Statistics.RawSize)</div>
                        </div>
                    </div>

                    @* Formatted Size *@
                    <div class="stat-card">
                        <div class="stat-icon icon-size">
                            <Icon Name="file-earmark-text" Size="24" />
                        </div>
                        <div class="stat-info">
                            <div class="stat-label">Formatted Size</div>
                            <div class="stat-value">@FormatBytes(Statistics.FormattedSize)</div>
                        </div>
                    </div>

                    @* Avg Properties/Object *@
                    @if (Statistics.ObjectCount > 0)
                    {
                        <div class="stat-card">
                            <div class="stat-icon icon-average">
                                <Icon Name="calculator" Size="24" />
                            </div>
                            <div class="stat-info">
                                <div class="stat-label">Avg Props/Object</div>
                                <div class="stat-value">@Math.Round(Statistics.AvgPropertiesPerObject, 2)</div>
                            </div>
                        </div>
                    }

                    @* Avg Array Length *@
                    @if (Statistics.ArrayCount > 0)
                    {
                        <div class="stat-card">
                            <div class="stat-icon icon-average">
                                <Icon Name="distribute-vertical" Size="24" />
                            </div>
                            <div class="stat-info">
                                <div class="stat-label">Avg Array Length</div>
                                <div class="stat-value">@Math.Round(Statistics.AvgArrayLength, 2)</div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            @* Footer *@
            <div class="stats-modal-footer">
                <div class="export-dropdown">
                    <button class="btn btn-sm btn-primary dropdown-toggle"
                            type="button"
                            @onclick="ToggleExportMenu">
                        <Icon Name="download" Size="14" />
                        <span class="ms-1">Export</span>
                    </button>
                    @if (showExportMenu)
                    {
                        <div class="dropdown-menu show">
                            <a class="dropdown-item" @onclick="() => ExportStatistics(ExportFormat.JSON)">
                                <Icon Name="filetype-json" Size="14" />
                                <span class="ms-2">Export as JSON</span>
                            </a>
                            <a class="dropdown-item" @onclick="() => ExportStatistics(ExportFormat.CSV)">
                                <Icon Name="filetype-csv" Size="14" />
                                <span class="ms-2">Export as CSV</span>
                            </a>
                            <a class="dropdown-item" @onclick="() => ExportStatistics(ExportFormat.TXT)">
                                <Icon Name="filetype-txt" Size="14" />
                                <span class="ms-2">Export as TXT</span>
                            </a>
                        </div>
                    }
                </div>
                <button class="btn btn-sm btn-secondary" @onclick="HandleClose">
                    Close
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public JsonStats? Statistics { get; set; }
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public bool IsDarkTheme { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    private bool showExportMenu = false;
    private DotNetObjectReference<JsonStatistics>? dotNetHelper;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            dotNetHelper = DotNetObjectReference.Create(this);
            await RegisterKeyboardShortcuts();
        }
    }

    private async Task RegisterKeyboardShortcuts()
    {
        await JSRuntime.InvokeVoidAsync("eval", @"
            (function() {
                if (!window.statsModalKeyHandlerRegistered) {
                    document.addEventListener('keydown', function(e) {
                        if (e.key === 'Escape') {
                            const modal = document.querySelector('.stats-modal-overlay');
                            if (modal) {
                                const closeBtn = modal.querySelector('.stats-modal-close');
                                if (closeBtn) {
                                    closeBtn.click();
                                }
                            }
                        }
                    });
                    window.statsModalKeyHandlerRegistered = true;
                }
            })();
        ");
    }

    private async Task HandleClose()
    {
        showExportMenu = false;
        await OnClose.InvokeAsync();
    }

    private void HandleOverlayClick()
    {
        _ = HandleClose();
    }

    private void ToggleExportMenu()
    {
        showExportMenu = !showExportMenu;
    }

    public enum ExportFormat
    {
        JSON,
        CSV,
        TXT
    }

    private async Task ExportStatistics(ExportFormat format)
    {
        if (Statistics == null) return;

        showExportMenu = false;
        string content = "";
        string fileName = $"json-statistics-{DateTime.Now:yyyyMMdd-HHmmss}";
        string mimeType = "";

        switch (format)
        {
            case ExportFormat.JSON:
                content = JsonConvert.SerializeObject(Statistics, Formatting.Indented);
                fileName += ".json";
                mimeType = "application/json";
                break;

            case ExportFormat.CSV:
                content = GenerateCSV();
                fileName += ".csv";
                mimeType = "text/csv";
                break;

            case ExportFormat.TXT:
                content = GenerateTXT();
                fileName += ".txt";
                mimeType = "text/plain";
                break;
        }

        await DownloadFile(fileName, content, mimeType);
    }

    private string GenerateCSV()
    {
        var csv = new System.Text.StringBuilder();
        csv.AppendLine("Metric,Value");
        csv.AppendLine($"Total Properties,{Statistics.TotalProperties}");
        csv.AppendLine($"Objects,{Statistics.ObjectCount}");
        csv.AppendLine($"Arrays,{Statistics.ArrayCount}");
        csv.AppendLine($"Strings,{Statistics.StringCount}");
        csv.AppendLine($"Numbers,{Statistics.NumberCount}");
        csv.AppendLine($"Booleans,{Statistics.BooleanCount}");
        csv.AppendLine($"Nulls,{Statistics.NullCount}");
        csv.AppendLine($"Max Depth,{Statistics.MaxDepth}");
        csv.AppendLine($"Raw Size,{Statistics.RawSize}");
        csv.AppendLine($"Formatted Size,{Statistics.FormattedSize}");
        if (Statistics.ObjectCount > 0)
            csv.AppendLine($"Avg Props/Object,{Statistics.AvgPropertiesPerObject:F2}");
        if (Statistics.ArrayCount > 0)
            csv.AppendLine($"Avg Array Length,{Statistics.AvgArrayLength:F2}");
        return csv.ToString();
    }

    private string GenerateTXT()
    {
        var txt = new System.Text.StringBuilder();
        txt.AppendLine("═══════════════════════════════════════");
        txt.AppendLine("       JSON STATISTICS REPORT");
        txt.AppendLine("═══════════════════════════════════════");
        txt.AppendLine($"Generated: {DateTime.Now:yyyy-MM-dd HH:mm:ss}");
        txt.AppendLine();
        txt.AppendLine("STRUCTURE:");
        txt.AppendLine($"  • Total Properties: {Statistics.TotalProperties}");
        txt.AppendLine($"  • Objects: {Statistics.ObjectCount}");
        txt.AppendLine($"  • Arrays: {Statistics.ArrayCount}");
        txt.AppendLine();
        txt.AppendLine("DATA TYPES:");
        txt.AppendLine($"  • Strings: {Statistics.StringCount}");
        txt.AppendLine($"  • Numbers: {Statistics.NumberCount}");
        txt.AppendLine($"  • Booleans: {Statistics.BooleanCount}");
        txt.AppendLine($"  • Nulls: {Statistics.NullCount}");
        txt.AppendLine();
        txt.AppendLine("METRICS:");
        txt.AppendLine($"  • Max Depth: {Statistics.MaxDepth}");
        txt.AppendLine($"  • Raw Size: {FormatBytes(Statistics.RawSize)}");
        txt.AppendLine($"  • Formatted Size: {FormatBytes(Statistics.FormattedSize)}");
        if (Statistics.ObjectCount > 0)
            txt.AppendLine($"  • Avg Props/Object: {Statistics.AvgPropertiesPerObject:F2}");
        if (Statistics.ArrayCount > 0)
            txt.AppendLine($"  • Avg Array Length: {Statistics.AvgArrayLength:F2}");
        txt.AppendLine();
        txt.AppendLine("═══════════════════════════════════════");
        return txt.ToString();
    }

    private async Task DownloadFile(string fileName, string content, string mimeType)
    {
        var base64 = Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes(content));
        await JSRuntime.InvokeVoidAsync("eval", $@"
            (function() {{
                const byteCharacters = atob('{base64}');
                const byteNumbers = new Array(byteCharacters.length);
                for (let i = 0; i < byteCharacters.length; i++) {{
                    byteNumbers[i] = byteCharacters.charCodeAt(i);
                }}
                const byteArray = new Uint8Array(byteNumbers);
                const blob = new Blob([byteArray], {{ type: '{mimeType}' }});
                const url = URL.createObjectURL(blob);
                const link = document.createElement('a');
                link.href = url;
                link.download = '{fileName}';
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
                URL.revokeObjectURL(url);
            }})();
        ");
    }

    private string FormatBytes(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    public void Dispose()
    {
        dotNetHelper?.Dispose();
    }
}

